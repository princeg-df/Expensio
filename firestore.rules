rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is the admin
    function isAdmin() {
      return request.auth.token.email == 'princegupta619@gmail.com';
    }

    // Users can only read and write their own documents
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId || isAdmin();

      // Users can only read and write their own subcollections
      match /{subcollection}/{docId} {
        allow read, write: if request.auth.uid == userId || isAdmin();
      }
    }
  }
}
