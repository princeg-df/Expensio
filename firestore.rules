rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // Allow any authenticated user to read public user profiles (for adding to groups)
      allow read: if request.auth != null;

      // Allow creating a user doc only if it's a placeholder for an invite
      allow create: if request.resource.data.isPlaceholder == true && request.auth != null;
      
      // Only the user themselves can update or delete their own document
      allow update, delete: if request.auth.uid == userId;

      // Rules for subcollections
      match /{collection}/{docId} {
        // A user can read/write/delete docs in their own subcollections
        allow read, write, delete: if request.auth.uid == userId;
      }
    }

    match /groups/{groupId} {
      // Allow read/write access to a group only if the user is a member of that group
      allow read, write: if request.auth.uid in resource.data.members;
    }
  }
}
