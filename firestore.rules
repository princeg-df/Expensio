rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow users to read and write their own user document (for budget, etc.)
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Allow users to read and write documents in their own subcollections
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
