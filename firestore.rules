
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow admin to read all user documents, and users to read their own.
    match /users/{userId} {
      allow read: if request.auth.uid == userId || request.auth.token.email == 'imshardadeen1@gmail.com';
      allow list: if request.auth.token.email == 'imshardadeen1@gmail.com';
      allow write: if request.auth.uid == userId;

      // Allow admin to read subcollections, and users to read/write their own subcollections.
      match /{collection}/{docId} {
        allow read: if request.auth.uid == userId || request.auth.token.email == 'imshardadeen1@gmail.com';
        allow write: if request.auth.uid == userId;
      }
    }
  }
}
