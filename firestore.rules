
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow users to read, update, or delete their own document
      allow read, update, delete: if request.auth.uid == userId;
      // Allow a user to be created if they are a placeholder
      allow create: if request.auth != null && request.resource.data.isPlaceholder == true;
    }

    match /users/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId;
    }

    // Rules for the 'groups' collection
    match /groups/{groupId} {
      // Allow read if the user is a member of the group
      allow read: if request.auth != null && resource.data.members.hasAny([request.auth.uid]);
      // Allow create if the user is authenticated and is the creator
      allow create: if request.auth != null && request.resource.data.createdBy == request.auth.uid;
      // Allow update if the user is a member of the group
      allow update: if request.auth != null && resource.data.members.hasAny([request.auth.uid]);
      // Allow delete only by the group creator
      allow delete: if request.auth != null && resource.data.createdBy == request.auth.uid;
    }
  }
}
