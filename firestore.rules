
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow any authenticated user to create a placeholder user document
      allow create: if request.resource.data.isPlaceholder == true && request.auth != null;
      
      // Allow users to read the list of all users for group creation
      allow list: if request.auth != null;

      // Allow users to read, update, or delete their own document
      allow read, update, delete: if request.auth.uid == userId;

      // Allow access to subcollections only for the owner
      match /{collection}/{docId} {
        allow read, write, delete: if request.auth.uid == userId;
      }
    }

    match /groups/{groupId} {
      allow read, write: if request.auth.uid in resource.data.members;
    }
  }
}
